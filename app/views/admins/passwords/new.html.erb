<div class="col-lg-3"></div>
<div class="well bs-component col-lg-6">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post,:class => "form-horizontal" }) do |f| %>
      <%= devise_error_messages! %>
      <fieldset>
        <legend>Forgot your password?</legend>

         <div class="form-group">
            <label for="inputEmail" class="col-lg-2 control-label">Email</label>
            <div class="col-lg-10">
              <%= f.email_field :email, :class => "form-control", :placeholder => "Enter email"%>
            </div>
         </div>

        

         <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
              
              <button type="submit" class="btn btn-primary">Send me reset password instructions</button>
            </div>
          </div>

      </fieldset>

  <% end %>
</div>
<div class="col-lg-3"></div>











