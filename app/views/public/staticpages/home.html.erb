            <div class="row">
                <div class="col-lg-12">
                    <h1 class="tagline">Make your smile</h1>
                </div>
            </div>
        </div>
    </header>

    <!-- Page Content -->
    <div class="container">
     <div class="row">
            <div class="col-sm-10">
