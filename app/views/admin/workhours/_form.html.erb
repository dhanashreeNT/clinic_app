<%= form_for @admin_workhour, :html =>{:class => "form-horizontal"} do |f| %>

  <% if @admin_workhour.errors.any? %>
    <div class="panel panel-danger" id="error_explanation">
      <div class="panel-heading">
         <h3 class="panel-title"><%= pluralize(@admin_workhour.errors.count, "error") %> prohibited this admin_workhour from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @admin_workhour.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  

  <fieldset>
    <legend>Working Hours Details</legend>

    <div class="form-group">
      <label for="inputPassword" class="col-lg-2 control-label">Day</label>
      <div class="col-lg-10">
        <%= f.text_field :day, :class => "form-control", :placeholder => "First Name", :readonly => 'true'%>
      </div>
    </div>
    
    <div class="form-group">
      <label for="inputPassword" class="col-lg-2 control-label">Select Start Time </label>
         <div class="col-lg-10">
            <div class='input-group date' id='start_time'>
                <%= f.text_field :start_time, :class => "form-control" %>
                <span class="input-group-addon"><span class="glyphicon glyphicon-time"></span>
                </span>
            </div>
         </div>
    </div> 

    <div class="form-group">
      <label for="inputPassword" class="col-lg-2 control-label">Select End Time </label>
         <div class="col-lg-10">
            <div class='input-group date' id='end_time'>
                <%= f.text_field :end_time, :class => "form-control" %>
                <span class="input-group-addon"><span class="glyphicon glyphicon-time"></span>
                </span>
            </div>
         </div>
    </div> 


    <div class="form-group">
      <label for="inputPassword" class="col-lg-2 control-label">Weekly Off</label>
      <div class="col-lg-10">
         <%= f.check_box :weekly_off, :class => "form-control" %>
      </div>
    </div>
   
    
    
    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <%= link_to "Cancel", admin_appointments_path, :class => "btn btn-default" %>
        
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </div>

  </fieldset>
<% end %>

