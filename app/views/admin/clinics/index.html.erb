<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><b>Clinics</b></h3>
  </div>
  <div class="panel-body">
    Here you can see all the clinics currently present in database. You can add edit delete the clinic information.
  </div>
</div>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
        <th>#</th>
        <th>Name</th>
        <th>Logo</th>
        <th>City</th>
        <th>Contact num</th>
        <th>Address</th>
        <th>Email</th>
        <th></th>
        <th></th>
        <th></th>
    </tr>
  </thead>
  <tbody>
    <% @admin_clinics.each do |admin_clinic| %>
    <tr>
        <td><%= admin_clinic.id %></td>
        <td><%= admin_clinic.name %></td>
        <td><%= admin_clinic.logo %></td>
        <td><%= admin_clinic.city %></td>
        <td><%= admin_clinic.contact_num %></td>
        <td><%= admin_clinic.address %></td>
        <td><%= admin_clinic.email %></td>
        <td><%= link_to 'Show', admin_clinic, :class => "btn btn-default btn-sm" %></td>
        <td><%= link_to 'Edit', edit_admin_clinic_path(admin_clinic), :class => "btn btn-primary btn-sm" %></td>
        <td><%= link_to 'Destroy', admin_clinic, method: :delete, data: { confirm: 'Are you sure?' } , :class => "btn btn-danger btn-sm"%></td>
    </tr>
    <% end %>
  </tbody>
</table>





<br />

<%= link_to 'New Clinic', new_admin_clinic_path, :class => "btn btn-success" %>
