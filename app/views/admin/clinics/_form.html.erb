<%= form_for @admin_clinic, :html =>{:class => "form-horizontal", :multipart => true} do |f| %>

  <% if @admin_clinic.errors.any? %>
    <div class="panel panel-danger" id="error_explanation">
      <div class="panel-heading">
         <h3 class="panel-title"><%= pluralize(@admin_clinic.errors.count, "error") %> prohibited this admin_clinic from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @admin_clinic.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  

  <fieldset>
    <legend>Clinic Information</legend>

    <div class="form-group">
      <label for="inputEmail" class="col-lg-2 control-label">Name</label>
      <div class="col-lg-10">
        <%= f.text_field :name, :class => "form-control", :placeholder => "Enter name"%>
      </div>
    </div>

    <div class="form-group">
      <label for="inputPassword" class="col-lg-2 control-label">Upload a Logo</label>
      <div class="col-lg-10">
        <%= f.file_field :clinic_logo, :class => "form-control", :placeholder => "logo"%>
      </div>
    </div>

    <div class="form-group">
      <label for="inputPassword" class="col-lg-2 control-label">City</label>
      <div class="col-lg-10">
        <%= f.text_field :city, :class => "form-control", :placeholder => "logo"%>
      </div>
    </div>

    <div class="form-group">
      <label for="inputPassword" class="col-lg-2 control-label">Contact Number</label>
      <div class="col-lg-10">
        <%= f.text_field :contact_num, :class => "form-control", :placeholder => "Contact Number "%>
      </div>
    </div>

    <div class="form-group">
      <label for="inputPassword" class="col-lg-2 control-label">Email</label>
      <div class="col-lg-10">
        <%= f.text_field :email, :class => "form-control", :placeholder => "Email"%>
      </div>
    </div>

    <div class="form-group">
      <label for="textArea" class="col-lg-2 control-label">Address</label>
      <div class="col-lg-10">
        <%= f.text_area :address, :class =>"form-control" %>
        
        <span class="help-block">A longer block of help text that breaks onto a new line and may extend beyond one line.</span>
      </div>
    </div>


    
    
    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <%= link_to "Cancel", admin_clinics_path, :class => "btn btn-default" %>
        
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </div>

  </fieldset>
<% end %>


