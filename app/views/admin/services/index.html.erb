<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><b>Services</b></h3>
  </div>
  <div class="panel-body">
    Here you can see all the Services currently present in database. You can add edit delete the Services information.
  </div>
</div>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
        <th>#</th>
        <th>Name</th>
        <th>Description</th>
        <th>Service image</th>
        <th></th>
        <th></th>
        <th></th>
    </tr>
  </thead>
  <tbody>
    <% @admin_services.each do |admin_service| %>
      <tr>
        <td><%= admin_service.id %></td>
        <td><%= admin_service.name %></td>
        <td><%= admin_service.description %></td>
        <td><%= image_tag admin_service.servimage.url(:thumb) %></td>
        
        
        <td><%= link_to 'Show', admin_service, :class => "btn btn-default btn-sm" %></td>
        <td><%= link_to 'Edit', edit_admin_service_path(admin_service), :class => "btn btn-primary btn-sm" %></td>
        <td><%= link_to 'Destroy', admin_service, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>

   
  </tbody>
</table>

<br />

<%= link_to 'New Service', new_admin_service_path, :class => "btn btn-success" %>
