<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><b>Appointments</b></h3>
  </div>
  <div class="panel-body">
    Here you can see all the appointments currently present in database. You can add edit delete the appoitnment information.
  </div>
</div>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
        <th>#</th>
        <th>Service</th>
        <th>Time of appointment</th>
        <th>First name</th>
        <th>Last name</th>
        <th>Address</th>
        <th>Email</th>
        <th>Conatact Number</th>
        <th></th>
        <th></th>
        <th></th>
    </tr>
  </thead>
  <tbody>
    <% @admin_appointments.each do |admin_appointment| %>
      <tr>
        <td><%= admin_appointment.id %></td>
        <td><%= Admin::Service.find(admin_appointment.admin_service_id).name %></td>
        <td><%= admin_appointment.appdatetime %></td>
        <td><%= admin_appointment.first_name %></td>
        <td><%= admin_appointment.last_name %></td>
        <td><%= admin_appointment.address %></td>
        <td><%= admin_appointment.email %></td>
        <td><%= admin_appointment.contact_num %></td>
        
        <td><%= link_to 'Show', admin_appointment, :class => "btn btn-default btn-sm" %></td>
        <td><%= link_to 'Edit', edit_admin_appointment_path(admin_appointment), :class => "btn btn-primary btn-sm" %></td>
        <td><%= link_to 'Destroy', admin_appointment, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>

   
  </tbody>
</table>

<br />

<%= link_to 'New Appointment', new_admin_appointment_path, :class => "btn btn-success" %>

